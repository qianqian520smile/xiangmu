/* pages/homes/homes.wxss */
page{
  width:100%;
  height: 100%;
}
.wrap{
  width:100%;
  height: 100%;
}
.list{
  width:100%;
  height: 100rpx;
  border-bottom: 1px solid #ccc;
  display: flex;
  justify-content: space-around;
  align-items: center;
}
.today{
   width:100%;
  height: 150rpx;
  line-height: 150rpx;
  padding-left: 100rpx;
  display: flex;
  align-items: center;
}
.today image{
   width:100rpx;
   height:100rpx;
   margin-right: 50rpx;
}
.person{
  width:100%;
  height: 100%;
  display: flex;
  flex-wrap: wrap;
}
.p-top{
  width:50%;
  height: 350rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
}
.p-top image{
   width:300rpx;
   height:250rpx;
}